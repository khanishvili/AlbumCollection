@model AlbumCollection.Models.Song
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
    <link href="~/Style/Song.css" rel="stylesheet" />
</head>
<body>

    <h4>Song</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Song_Name" class="control-label"></label>
                    <input asp-for="Song_Name" class="form-control" />
                    <span asp-validation-for="Song_Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AlbumId" class="control-label"></label>
                    <select name="AlbumId" asp-for="AlbumId" class="form-control" asp-items="ViewBag.AlbumId">
                        <option value="1">Hail to the King</option>
                        <option value="2">NightMare</option>
                        <option value="3">The Stage</option>
                    </select>
             
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="../Album/Details/">Back to List</a>
    </div>

</body>
</html>
